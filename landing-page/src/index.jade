extends _layouts/base

block content
  div.relative.z2
    .ph2.pt5.mw7.center
      h1.f2.f1-sm.lh-solid.mb4.mw6.spacefarm spacefarm
      p.mw6.mb4 Spacefarm is a multidisciplinary design and front-end shop focused on digital products, design systems and branding. We used to be called <a href="http://www.thecrazyones.agency" target="blank">The Crazy Ones↗</a>. Our full site is coming soon.

        each thing, name in site.data.projects.work
          h1.f5.lh-title.mb2 #{name}
          .row.mb3
            each stuff, chill in thing
              if chill == "Dribbble↗"
                .col-12.col-sm-6.flex
                  .bg-fff.shadow.pa3.db.mb2.br1.relative.w-100
                    h2.f4.lh-title.mb1(class="#{stuff.color}") Dribbble↗
                    p.mb1 Follow our most recent work and get a sneak peak at the process behind our new brand and website <a class="dribbble" href="https://dribbble.com/KalinaIvanova">here</a> and <a class="dribbble" href="https://dribbble.com/deezel">here</a>.
              else if (chill == "Mindfullness" || chill == "Getting stronger" || chill == "Designing with code")
                .col-12.col-sm-6.flex
                  .bg-fff.shadow.pa3.db.mb2.br1.relative.w-100
                    h2.f4.lh-title.mb1(class="#{stuff.color}") #{chill}
                    p.mb1 #{stuff.description}
              else
                .col-12.col-sm-6.flex
                  a.bg-fff.shadow.pa3.db.mb2.br1.states.relative.w-100(href="#{stuff.link}", target="_blank")
                    h2.f4.lh-title.mb1(class="#{stuff.color}") #{chill}
                    p.mb1 #{stuff.description}

      .tc.mw6.center
        p Feel like building something exciting together? Drop us a line.
        a.btn.dib.bg-blue.fff.b.tc.ph3.pv2.br1.mb4.states(href="mailto:hello@spacefarm.digital") Contact

  div.relative
    .absolute.w-100.h-100.db.z2.fade
    .illustration.relative
      include _images/test.svg
