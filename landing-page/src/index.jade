extends _layouts/base

block content
  div.relative.z2
    .ph2.pt5.mw7.center
      h1.f2.f1-sm.lh-solid.mb4.mw6.spacefarm Hello, this is spacefarm
      p.mw6.mb4 This is a paragraph about us and how much we love design. We have <a href="http://www.thecrazyones.agency" target="blank">this old site↗</a> and we’re making a new one. Below is some work and a space plant.

      .row.mb3
        each thing in site.data.projects.old
          .col-12.col-md-6.flex
            a.bg-fff.shadow.pa3.db.mb2.br1.states.relative.w-100(href="#{thing.link}", target="_blank")
              h2.f3(class="#{thing.color}") #{thing.name}
              p #{thing.description}

    .tc
      p Drop us a line, we are very nice.
      a.btn.dib.bg-blue.fff.b.tc.ph3.pv2.br1.states(href="mailto:hello@spacefarm.digital") Contact

  svg.db.center.illustration(viewBox="0 0 2250 429")
